@model PagedList.IPagedList<Dichvuhoanhao.Entity.Usercm>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/CMS/Views/Shared/_Layout.cshtml";
}
@section jsFooter{
    <script src="~/Assets/admin/js/controller/userController.js"></script>
}

<div class="row">
    <div class="col-lg-6" style="width:100%">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách người dùng
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">

                @using (Html.BeginForm("Index", "User", FormMethod.Get))
            {
                    <div class="row form-group">
                        <div class="col-lg-12">
                            <div class="col-md-5">
                                <input type="text" value="@ViewBag.SearchString" name="searchString" class="form-control" />
                            </div>
                            <div class="col-md-5">
                                <button class="btn btn-success" type="submit">Tìm kiếm</button>
                                <a href="/CMS/User/Create" class="btn btn-primary">Thêm mới</a>
                            </div>
                        </div>
                    </div>
                }

                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Chức vụ</th>
                                <th>Tài khoản</th>
                                <th>Tên đầy đủ</th>
                                <th>Trạng thái</th>
                                <th>#</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="row_@item.Id">
                                    <td>@item.Role</td>
                                    <td>@item.UserName</td>
                                    <td>@item.FullName</td>
                                    <td><a href="#" class="btn-active" data-id="@item.Id">@Html.Raw(item.Status ? "Kích hoạt" : "Khoá")</a></td>
                                    <td>
                                        <a href="/CMS/User/Edit/@item.Id">Sửa</a>
                                        |
                                        
                                        @Ajax.ActionLink("Xóa", "Delete", new { @id = item.Id }, new AjaxOptions
                                   {
                                       Confirm = "Bạn có muốn xóa bản ghi này?",
                                       OnComplete = "$('#row_" + @item.Id + "').remove()",
                                       HttpMethod = "Delete"
                                   })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, searchString = @ViewBag.SearchString }))
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>

</div>