@section jsFooter{
    <script>
        $(document).ready(function () {

            $("#Title").keypress(function () {
                var khongdau = bodauTiengViet($("#Title").val()).trim().replace(/[ /]/g, "-");
                $("#Url").val(khongdau);
            });

            $('#btnSelectImage').on('click', function (e) {
                e.preventDefault();
                var finder = new CKFinder();
                finder.selectActionFunction = function (url) {
                    $('#txtImage').val(url);
                };
                finder.popup();
            })
            $('#btnSelectFile').on('click', function (e) {
                e.preventDefault();
                var finder = new CKFinder();
                finder.selectActionFunction = function (url) {
                    $('#txtFile').val(url);
                };
                finder.popup();
            })
            var editor = CKEDITOR.replace('txtText', {
                customConfig: '/Assets/admin/js/addson/ckeditor/config.js',
            });
        })
    </script>
}
