@model Dichvuhoanhao.Entity.Whyme

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/CMS/Views/Shared/_Layout.cshtml";
}
@section jsFooter{
    <script>
        $(document).ready(function () {
            $('#btnSelectImage').on('click', function (e) {
                e.preventDefault();
                var finder = new CKFinder();
                finder.selectActionFunction = function (url) {
                    $('#txtImage').val(url);
                };
                finder.popup();
            })
        })
    </script>
}

