@model IEnumerable<TemSMS.Models.Article>
@{
    ViewBag.Title = "Bảo hành điện tử sms";
    ViewBag.Description = "Bảo hành điện tử SMS là chế độ bảo hành sản phẩm trực tuyến tích hợp tin nhắn SMS từ các đầu số SMS 8077 nhằm thay thế cho hoạt động bảo hành giầy hay thẻ bảo hành truyền thống";
    ViewBag.Keyword = "Bảo hành điện tử sms";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1 style="color:transparent;font-size:0;">@ViewBag.Title</h1>
<section id="product">
    <div class="content">
        <div class="title"><h2>BẢO HÀNH ĐIỆN TỬ SMS</h2></div>
        @foreach (var item in Model)
        {
            <div class="col-lg-4 col-sm-4 col-md-4 col-xs-6" style="padding-top:15px;min-height:380px;max-height:380px;">
                <a href="@Url.Action("Article", "Product", new { rewrite = item.Url })" title="@item.Title">
                    <img src="@item.Image" class="img-responsive" style="width:100%;"/>
                </a>
                <div class="">
                    <a href="@Url.Action("Article", "Product", new { rewrite = item.Url })" title="@item.Title">
                        <h3 style="text-transform:uppercase;">
                            @item.Title
                        </h3>
                    </a>
                </div>
                <div class="description">
                    <p>
                        @item.Description
                    </p>
                </div>
            </div>
        }
    </div>
    <div class="clearfix"></div>
    <ul class="pagination">
        @Html.Raw((String)ViewBag.PagingHtml)
    </ul>
</section>

