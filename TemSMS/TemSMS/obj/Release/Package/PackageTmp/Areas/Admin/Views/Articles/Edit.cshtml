@model TemSMS.Models.Article

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section scripts{
    <script>
        $("#Title").keypress(function () {
            var khongdau = bodauTiengViet($("#Title").val()).trim().replace(/[ /]/g, "-");
            $("#Url").val(khongdau);
        });
        $(document).ready(function () {
            $('#btnSelectImage').on('click', function (e) {
                e.preventDefault();
                var finder = new CKFinder();
                finder.selectActionFunction = function (url) {
                    $('#txtImage').val(url);
                };
                finder.popup();
            })
        })
    </script>
}
<section class="content-header">
    <h1>
        Acticle
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Acticle</a></li>
        <li class="active">Sửa</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-primary">
                <div class="box-header with-border">

                </div>
                <div class="box-body">
                    @using (Html.BeginForm())
    {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="row">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Product, htmlAttributes: new { })
                        @Html.DropDownList("Product", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Product, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        <label>@Html.LabelFor(model => model.Title, htmlAttributes: new { })</label>
                        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Text, htmlAttributes: new { })
                        @Html.TextAreaFor(model => model.Text, new { @id = "editor1", @name = "editor1" })
                        @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Image, htmlAttributes: new { @class = "" })
                        @Html.TextBoxFor(model => model.Image, new { htmlAttributes = new { @class = "form-control" }, id = "txtImage" })
                        <a href="#" id="btnSelectImage">Chọn ảnh</a>
                        @Html.ValidationMessageFor(model => model.Image, "size yêu cầu: cùng kích thước", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row">
                    <div class="form-group">
                        <label>@Html.LabelFor(model => model.Description, htmlAttributes: new { })</label>
                        @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Url, htmlAttributes: new { })
                        @Html.EditorFor(model => model.Url, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Url, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Tags, htmlAttributes: new { })
                        @Html.EditorFor(model => model.Tags, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Tags, "vd: việt nam|trung quốc|lào|thái lan; ", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row">
                    <div class="btn btn-default">
                        @Html.ActionLink("Hủy", "Index")
                    </div>
                    <input type="submit" value="Tạo" class="btn btn-primary" />
                </div>
}

                </div>
            </div>
        </div>
    </div>
</section>