@model PagedList.IPagedList<BHDTNEWS.Models.Article>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Tin liên quan - Bảo Hành Điện Tử";
    Layout = "~/Views/Shared/_LayoutBHDT.cshtml";
    IEnumerable<BHDTNEWS.Models.Article> footerNews = ViewBag.footerNews;
    IEnumerable<BHDTNEWS.Models.Video> footerVideos = ViewBag.footerVideos;
    BHDTNEWS.Models.Config config = ViewBag.config;
}

<!--Section 1-->
<section class="news_section">
    <div class="container">
        <div class="row d-flex">
            <div class="col-sm-12">
                <p class="section1_first_text">
                    Các tin liên quan
                </p>
            </div>
        </div>
        <div class="row d-flex">
            @foreach (var itemContent in Model)
            {                
                <div class="col-md-4 ftco-animate">
                    <div class="blog-entry align-self-stretch thumbnail_news_image" style="border-top: 1px solid #1C668B;">
                        <div class="text mt-3">
                            <h3 class="heading" style="min-height: 26px;"><a href="@Url.Action("NewsDetail","News",new {rewrite=itemContent.Link})">@itemContent.Title</a></h3>
                            <div class="meta mb-2" style="text-align: right;">
                                <div><a href="@Url.Action("NewsDetail","News",new {rewrite=itemContent.Link})" class="news_created_date">Ngày đăng: @Convert.ToDateTime(@itemContent.Createdate).ToString("dd/MM/yyyy")</a></div>
                            </div>
                            <a alt="Bảo hành điện tử" href="@Url.Action("NewsDetail","News",new {rewrite=itemContent.Link})" class="block-20 rounded" style="background-image: url('@itemContent.Image'); margin-top: 5px;">
                                <span class="background-image" role="img" aria-label="Bảo hành điện tử"> </span>
                            </a>
                            <p class="" style="padding-top: 15px;">@itemContent.ShortDescription</p>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="row">
            <div class="col text-center">
                <div class="block-27">
                    @Html.PagedListPager(Model, page => Url.Action("RelatedNews", new { page, key=ViewBag.key}))
                </div>
            </div>
        </div>
    </div>
</section>

<section>
    <div class="section7_bg">
        <div class="">
            <div class="col-sm-2"><p style="width: 100px"></p></div>
            <div class="col-sm-8">
                <marquee class="section7_text_1" width="90%" direction="right" height="100px" behavior="alternate">
                    Bạn vẫn còn câu hỏi?
                </marquee>
            </div>
        </div>
        <div class="">
            <div class="col-sm-6">
                <marquee class="" width="90%" direction="right" behavior="alternate">
                    <div class="">
                        <a href="tel:@config.Hotline"><img alt="Bảo hành điện tử" class="" src="~/images/bhdt/section7_contact_now.png" /></a>
                    </div>
                </marquee>
            </div>
            <div class="col-sm-6">
            </div>
        </div>
        <div class="">
            <div class="col-sm-1"></div>
            <div class="col-sm-11">
                <marquee class="section7_text_3" width="90%" direction="right" behavior="alternate">
                    Hoặc gọi Hotline: <a style="color: #FF0707;" href="tel:@config.Hotline">@config.Hotline</a> - <a style="color: #FF0707;" href="tel:@config.PhoneNumber">@config.PhoneNumber</a>
                </marquee>
            </div>
            <div class="col-sm-2">
            </div>
        </div>
    </div>
</section>

