@model IEnumerable<BHDTNEWS.Models.Package>
@{
    ViewBag.Title = "Index";
}
    <div class="container-fluid">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Danh sách gói </h6>
                <a href="/admin/package/create" class="btn btn-success" style="float:right;"><i class="fa fa-plus" aria-hidden="true"></i> Tạo mới</a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Package</th>
                                <th>Price</th>
                                <th>Discount</th>
                                <th>Đầu số</th>
                                <th>Cú pháp</th>
                                <th>Web/wap</th>
                                <th>Quantity</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Package</th>
                                <th>Price</th>
                                <th>Discount</th>
                                <th>Đầu số</th>
                                <th>Cú pháp</th>
                                <th>Web/wap</th>
                                <th>Quantity</th>
                                <th></th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>@item.Package1</td>
                                <td>@item.Price</td>
                                <td>@item.Discount</td>
                                <td>@item.Dauso</td>
                                <td>@item.Cuphap</td>
                                <td>@item.Webwap</td>
                                <td>@item.Quantity</td>
                                <td>
                                    <a class="btn" href="/admin/package/edit/@item.Id"><i class="fa fa-edit"></i></a>
                                    <a class="btn" href="/admin/package/delete/@item.Id"><i class="fa fa-trash"></i></a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>