@model IEnumerable<BHDTNEWS.Areas.Admin.Models.ArticleViewModel>
@{
    ViewBag.Title = "Index";
}

    <div class="container-fluid">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Danh sách bài viết</h6>
                <a href="/admin/article/create" class="btn btn-success" style="float:right;"><i class="fa fa-plus" aria-hidden="true"></i> Tạo mới</a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Link</th>
                                <th>Image</th>
                                <th>Count View</th>
                                <th>Phân Loại</th>
                                <th>Ngày tạo</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Title</th>
                                <th>Link</th>
                                <th>Image</th>
                                <th>Count View</th>
                                <th>Phân Loại</th>
                                <th>Ngày tạo</th>
                                <th></th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Title</td>
                                    <td>@item.Link</td>
                                    <td>
                                        <img src="@item.Image" style="width:100px;" />
                                    </td>
                                    <td>@item.CountView</td>
                                    <td>@item.CateName</td>
                                    <td>@item.Createdate</td>
                                    <td>
                                        <a class="btn" href="/admin/article/edit/@item.Id"><i class="fa fa-edit"></i></a>
                                        <a class="btn" href="/admin/article/delete/@item.Id"><i class="fa fa-trash"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>

