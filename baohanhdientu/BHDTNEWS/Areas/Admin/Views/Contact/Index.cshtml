@model IEnumerable<BHDTNEWS.Models.Contact>
@{
    ViewBag.Title = "Index";
}
<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Danh sách liên hệ</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Full Name</th>
                            <th>Phone Number</th>
                            <th>Email</th>
                            <th>Company</th>
                            <th>Note</th>
                            <th>Create date</th>
                            <th>Gói</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Full Name</th>
                            <th>Phone Number</th>
                            <th>Email</th>
                            <th>Company</th>
                            <th>Note</th>
                            <th>Create date</th>
                            <th>Gói</th>
                            <th></th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.FullName</td>
                                <td>@item.PhoneNumber</td>
                                <td>@item.Email</td>
                                <td>@item.Company</td>
                                <td>@item.Note</td>
                                <td>@item.Createdate</td>
                                <td>@item.PackageId</td>
                                <td>
                                    <a class="btn" href="/admin/contact/edit/@item.Id"><i class="fa fa-edit"></i></a>
                                    <a class="btn" href="/admin/contact/delete/@item.Id"><i class="fa fa-trash"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>

