@model HDDTpage.Models.Article

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/CMS/Views/Shared/_LayoutCMS.cshtml";
}

<section class="content-header">
    <h1>
        Acticle
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Acticle</a></li>
        <li class="active">Xóa</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="text-danger">BẠN CÓ CHẮC CHẮN MUỐN XÓA KHÔNG ?</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">

                    <div class="form-group">
                        <div class="row">
                            <div class="col-xs-2">
                                <label>@Html.DisplayNameFor(model => model.Title):</label>
                            </div>
                            <div class="col-xs-10">
                                @Html.DisplayFor(model => model.Title)
                            </div>
                        </div>
                    </div>
                    <hr style="border-top-color:lightblue" />
                    <div class="form-group">
                        <label>
                            @Html.DisplayNameFor(model => model.Text)
                        </label>
                        <div>
                            @*@Html.DisplayFor(model => model.ContentNews)*@
                            @Html.TextAreaFor(model => model.Text, new { @id = "editor1", @name = "editor1", @readonly = true })
                        </div>
                    </div>
                    <hr style="border-top-color:lightblue" />
                    <div class="form-group">
                        <div class="row">
                            <div class="col-xs-2">
                                <label>
                                    @Html.DisplayNameFor(model => model.Type):
                                </label>
                            </div>
                            <div class="col-xs-10">
                                @(Model.Type == 1 ? "Thắc mắc" : Model.Type == 2 ? "Phản hồi" : Model.Type == 3 ? "Quy trình" : "Tin tức")
                            </div>
                        </div>
                    </div>
                    <hr style="border-top-color:lightblue" />
                    <div class="form-group">
                        <div class="row">
                            <div class="col-xs-2">
                                <label>
                                    @Html.DisplayNameFor(model => model.CreateDate):
                                </label>
                            </div>
                            <div class="col-xs-10">
                                @Html.DisplayFor(model => model.CreateDate)
                            </div>
                        </div>
                    </div>
                    <hr style="border-top-color:lightblue" />
                    <div class="form-group">
                        <div class="row">
                            <div class="col-xs-2">
                                <label>
                                    @Html.DisplayNameFor(model => model.Description):
                                </label>
                            </div>
                            <div class="col-xs-10">
                                @Html.DisplayFor(model => model.Description)
                            </div>
                        </div>
                    </div>
                    <hr style="border-top-color:lightblue" />
                    <div class="form-group">
                        <div class="row">
                            <div class="col-xs-2">
                                <label>
                                    @Html.DisplayNameFor(model => model.Image):
                                </label>
                            </div>
                            <div class="col-xs-10">
                                @*@Html.DisplayFor(model => model.Image)*@
                                <img style="width:70px;height:70px;" src="@(Model.Image == null ? "/Content/cms/dist/img/no-img.png" : Model.Image)" alt="" />
                            </div>
                        </div>
                    </div>
                    <hr style="border-top-color:lightblue" />
                    <div class="form-group">
                        <div class="row">
                            <div class="col-xs-2">
                                <label>
                                    @Html.DisplayNameFor(model => model.Url):
                                </label>
                            </div>
                            <div class="col-xs-10">
                                @Html.DisplayFor(model => model.Url)
                            </div>
                        </div>
                    </div>
                    <hr style="border-top-color:lightblue" />
                    <div class="form-group">
                        <div class="row">
                            <div class="col-xs-2">
                                <label>
                                    @Html.DisplayNameFor(model => model.Alt):
                                </label>
                            </div>
                            <div class="col-xs-10">
                                @Html.DisplayFor(model => model.Alt)
                            </div>
                        </div>
                    </div>
                    <hr style="border-top-color:lightblue" />
                    <div class="form-group">
                        <div class="row">
                            <div class="col-xs-2">
                                <label>
                                    @Html.DisplayNameFor(model => model.IsActive):
                                </label>
                            </div>
                            <div class="col-xs-10">
                                @Html.DisplayFor(model => model.IsActive)
                            </div>
                        </div>
                    </div>
                    <hr style="border-top-color:lightblue" />
                    <div class="form-group">
                        <div class="row">
                            <div class="col-xs-2">
                                <label>
                                    @Html.DisplayNameFor(model => model.Tag):
                                </label>
                            </div>
                            <div class="col-xs-10">
                                @Html.DisplayFor(model => model.Tag)
                            </div>
                        </div>
                    </div>
                    <hr style="border-top-color:lightblue" />
                    <div class="box-footer col-xs-12">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-actions no-color">
                                <input type="submit" value="Xóa" class="btn btn-danger" /> |
                                @Html.ActionLink("Hủy", "Index")
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
